<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/font_green"
    tools:context=".MainMenuActivity">

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:gravity="left|top"
        android:background="@drawable/button_info"
        android:id="@+id/infoBtn"/>

    <LinearLayout style="@style/listBtnsMainMenu"
        android:id="@+id/listButtons">

        <Button style="@style/btnMainMenu"
            android:background="@drawable/button_play"
            android:id="@+id/playBtn"/>

        <Button style="@style/btnMainMenu"
            android:background="@drawable/button_rules"
            android:id="@+id/rulesBtn"/>

        <Button style="@style/btnMainMenu"
            android:background="@drawable/button_settings"
            android:id="@+id/settingsBtn"/>

        <Button style="@style/btnMainMenu"
            android:background="@drawable/button_records"
            android:id="@+id/recordBtn"/>

        <Button style="@style/btnMainMenu"
            android:background="@drawable/button_store"
            android:id="@+id/storeBtn"/>
    </LinearLayout>
</RelativeLayout>
