<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/white"
    tools:context=".MainMenuActivity">

    <LinearLayout style="@style/listBtnsMainMenu"
        android:id="@+id/listButtons">

        <Button style="@style/btnMainMenu"
            android:text="@string/play_btn"
            android:id="@+id/playBtn"/>

        <Button style="@style/btnMainMenu"
            android:text="@string/rules_btn"
            android:id="@+id/rulesBtn"/>

        <Button style="@style/btnMainMenu"
            android:text="@string/settings_btn"
            android:id="@+id/settingsBtn"/>

        <Button style="@style/btnMainMenu"
            android:text="@string/record_btn"
            android:id="@+id/recordBtn"/>

        <Button style="@style/btnMainMenu"
            android:text="@string/store_btn"
            android:id="@+id/storeBtn"/>

        <Button style="@style/btnMainMenu"
            android:text="@string/exit_btn"
            android:id="@+id/exitBtn"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/author_btn"
        android:layout_below="@+id/listButtons"
        android:layout_centerHorizontal="true"
        android:id="@+id/infoBtn"/>
</RelativeLayout>
