<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ru.edu.vstu.www.triples.activities.WinActivity"
    style="@style/activityStyle">

    <TextView style="@style/titleStyle"
        android:text="@string/congratulate"
        android:textSize="50sp"
        android:id="@+id/textCongratulation"/>

    <TextView style="@style/titleStyle"
        android:text="@string/win"
        android:textSize="50sp"
        android:layout_below="@+id/textCongratulation"
        android:id="@+id/textWin"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/textWin"
        android:layout_marginTop="100dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <TextView style="@style/textWin"
                android:layout_width="250dp"
                android:layout_gravity="right"
                android:text="@string/scoreWin"/>

            <TextView style="@style/textWin"
                android:layout_width="wrap_content"
                android:id="@+id/textScore"
                android:gravity="left"
                android:layout_marginLeft="50dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <TextView style="@style/textWin"
                android:text="@string/timeWin"
                android:layout_width="250dp"
                android:layout_gravity="right"/>

            <TextView style="@style/textWin"
                android:layout_width="wrap_content"
                android:id="@+id/textTime"
                android:gravity="left"
                android:layout_marginLeft="50dp"/>
        </TableRow>
    </TableLayout>

    <Button style="@style/btnActivityStyle"
        android:background="@drawable/btn_home100"
        android:id="@+id/homeFromWinBtn"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="150dp"/>

    <Button style="@style/btnActivityStyle"
        android:background="@drawable/btn_records100"
        android:id="@+id/recordFromWinBtn"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="350dp"/>
</RelativeLayout>

