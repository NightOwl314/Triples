<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <!--Список кнопок в главном меню-->
    <style name="listBtnsMainMenu">
        <item name="android:layout_width">520dp</item>
        <item name="android:layout_height">600dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!--Стиль кнопок главного меню-->
    <style name="btnMainMenu">
        <item name="android:layout_width">500dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <!--Стиль для каждой карты-->
    <style name="cardGame">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!--Стиль строк для игрового поля-->
    <style name="rowCardsGame">
        <item name="android:layout_width">750dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
</resources>
